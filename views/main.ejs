<%- include("header") -%>

<div class="navBar">
    <p>max of 15 lists</p>
    <% listIn.forEach((item)=>{ %>
      <form action="/redirect" method="post">
        <button type="submit" class="redirectButton" name="redirect" value="<%= item %>">
          <p>
            <%= item %>
          </p>
        </button>
        <% }) %>
      </form>

      <div class="navAddName">
        <form action="/addName" method="post">
          <input type="text" name="addName" placeholder="Enter your name for new list">
          <button type="submit" class="addButton">+</button>
        </form>
      </div>
  </div>

  <div class="main">
      <h2>This is the Main page</h2>
      <h3>Choose your list above or create a new one</h3>
  </div>



